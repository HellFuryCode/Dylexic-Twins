using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class SushiManager: MonoBehaviour
{
    public int SushiCount;
    public Text SushiText;
    public int Sesame_seed Count;
    public Text  Sesame_seedText;
    public GameObject console;
    
    // Start is called before the first frame update
    void Start()
    {
        
    }

    // Update is called once per frame
    void Update()
    {
        SushiText.text = SushiCount.ToString(); 

         Sesame_seedText.text =  Sesame_seedCount.ToString(); 
    
    }
    if(SushiCount == 5 && !consoleDestroyed)
            {
                consoleDestroyed = true;
                Destroy(console);
            }
}


